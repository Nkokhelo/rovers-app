{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "useUnknownInCatchVariables": true,
  },
  "exclude": [
    "setup.ts",
    "**/tests/**.ts"
  ]
}